{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write .",
    "quality:auto": "pnpm install && pnpm lint:fix && pnpm format",
    "quality:check": "pnpm lint && pnpm typecheck && pnpm build",
    "quality:full": "pnpm quality:auto && pnpm quality:check",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:check": "tsx -e \"import { checkConnection, closePool } from './src/lib/database'; checkConnection().then(r => { console.log(r ? '✅ Database connection OK' : '❌ Database connection failed'); closePool(); process.exit(r ? 0 : 1); })\""
  },
  "dependencies": {
    "@auth/pg-adapter": "^1.10.0",
    "@headlessui/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.4",
    "@package/ui": "workspace:*",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.454.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.6",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@package/eslint-config": "workspace:*",
    "@package/prettier-config": "workspace:*",
    "@package/typescript-config": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.25.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5"
  }
}
